model Campania {
  id        String    @id @default(cuid())
  
  // Relaci√≥n con Studio
  studio_id String
  studio    Studio    @relation(fields: [studio_id], references: [id])
  
  nombre    String
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
