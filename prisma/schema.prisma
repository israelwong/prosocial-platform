model marketing_pipeline_stages {
  id          String             @id @default(cuid())
  studio_id   String
  name        String // "Lead Nuevo", "Contactado", "Calificado"
  slug        String // "lead_nuevo", "contactado"
  description String?
  color       String             @default("#3B82F6")
  order       Int                @default(0)
