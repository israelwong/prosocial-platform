// 1.9 REDES SOCIALES (Catálogo global)
// ---------------------------------------------

model platform_social_networks {
  id                     String                   @id @default(cuid())
  name                   String                   @unique
  slug                   String                   @unique
  description            String?
  color                  String?
  icon                   String?
  base_url               String?
  order                  Int                      @default(0)
  is_active              Boolean                  @default(true)
  created_at             DateTime                 @default(now())
  updated_at             DateTime                 @updatedAt
  studio_social_networks studio_social_networks[] // ✅ Migrado de studio_redes_sociales

