
enum ModuleType {
  CORE
  ADDON
}

model platform_modules {
  id          String     @id @default(cuid())
  slug        String     @unique
  name        String
  description String
  type        ModuleType @default(CORE)
  
  studio_modules studio_modules[]
}

model studio_modules {
  id             String    @id @default(cuid())
  studio_id      String
  module_id      String
  is_active      Boolean   @default(false)
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  configuration  Json?

  studio         studios          @relation(fields: [studio_id], references: [id])
  platform_module platform_modules @relation(fields: [module_id], references: [id])

  @@unique([studio_id, module_id])
}
